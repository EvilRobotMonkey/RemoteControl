<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20000000"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="@dimen/px2dp_600"
        android:layout_height="@dimen/px2dp_400"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="5px"
            android:padding="20px"
            android:text="@string/default_value"
            android:textColor="#666666"
            android:textSize="@dimen/px2dp_28" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_88"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_cancle"
                android:gravity="center"
                android:text="@string/default_value"
                android:textColor="#666"
                android:textSize="@dimen/px2dp_32" />

            <View
                android:id="@+id/line_bottom"
                android:layout_width="@dimen/px2dp_1"
                android:layout_height="match_parent"
                android:background="#d0d0d0" />

            <TextView
                android:id="@+id/confirm_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_sure"
                android:gravity="center"
                android:text="@string/default_value"
                android:textColor="#fff"
                android:textSize="@dimen/px2dp_32" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>